#include <stdio.h>

//протип фунции
int check_for_value(int);

int main()
{
	int start_value = 0, value_three = 1, value_four = 0, buffer;//buffer -- временная переменная
	printf("Input number from 100 to 9999: ");
	start_value = check_for_value(start_value);//Проверяем введённое с клавиатуры числo
	if (start_value < 1000)//случай, если число трёхзначное
	{
		while (start_value > 0)//условие выхода
		{
			buffer = start_value % 10;
			start_value /= 10;
			value_three *= buffer;
		}
		printf("value_three= %d", value_three);
	}
	if (start_value >= 1000)//случай, если число четрыхзначное
	{
		while (start_value > 0)//условие выхода
		{
			buffer = start_value % 10;
			start_value /= 10;
			value_four += buffer;
		}
		printf("value_four= %d", value_four);
	}
	return 0;
}

// тело функции
int check_for_value(int n)
{
	while (!scanf_s("%d", &n) || (n < 100 || n>9999))
	{
		printf("Inccorect value. Try again pls: \n");
		rewind(stdin);
	}
	return n;
}
